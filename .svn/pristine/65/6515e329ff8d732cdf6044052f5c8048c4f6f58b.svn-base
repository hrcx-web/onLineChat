<script>
import { query, updateUser, userDelete, uploadQNImg } from '@/api/user'
import { initForm, copyObject, clearEmptyItem } from '@/utils/index'
import { updateCommunity } from '@/api/community'
import Pagination from '@/components/Pagination'
export default {
  components: {
    Pagination
  },
  data() {
    return {
      mode: '',
      filter: {
        phone: '',
        user: '',
        gender: ''
      },
      map: {
        gender: {
          1: '男',
          2: '女'
        },
        beMarried: {
          1: '是',
          2: '否'
        },
        isLike: {
          1: '是',
          2: '否'
        },
        type: {
          0: '文字',
          1: '图片',
          2: '视频'
        }
      },
      tableData: {
        array: [],
        row: {},
        loading: false
      },
      form: {
        user: '',
        phone: '',
        icon: '',
        gender: '',
        beMarried: '',
        birthday: '',
        career: '',
        constellation: '',
        geography: '',
        hometown: '',
        labels: '',
        stature: '',
        weChat: '',
        signature: ''
      },
      communityForm: {
        type: '0',
        content: '',
        infoUrl: '',
        isLike: '',
        label: '',
        likeNum: '',
        position: '',
        title: ''
      },
      pager: {
        pageNo: 1,
        pageSize: 10,
        total: 0
      },
      newVisible: false, // 编辑的默认隐藏
      dialogVisible: {
        user: false,
        community: false
      },
      dirRow: [], // 编辑
      sels: [], // 复选框
      handVisible: false,
      handleRow: {}, // 查看详情
      bigVisible: false,
      editImg: [], // 接受头像值
      photosVisible: false,
      dialogImageUrl: '',
      ImageUrlVisible: false,
      picList: [] // duo图
    }
  },

  created() {
    this.fetchData()
  },
  methods: {
    showCommunity(row) {
      this.tableData.row = row
      this.communityForm = initForm(this.communityForm, ['type'])
      this.dialogVisible.community = true
    },
    submitCommunity() {
      const _form = Object.assign({ user: this.tableData.row.id }, this.communityForm)
      updateCommunity(_form, 'add').then(res => {
        this.$message.success(res.message)
        this.dialogVisible.community = false
      })
    },
    handlePagerChange(val) {
      this.pager.pageNo = val.index
      this.pager.pageSize = val.size
      this.fetchData()
    },

    showDialog(mode, item) {
      this.mode = mode
      this.tableData.row = item || {}
      this.form = initForm(this.form)
      if (mode === 'edit') {
        this.form = copyObject(this.form, item, { numberToString: true })
      }
      this.dialogVisible.user = true
    },

    fakeClick(className) {
      const fileInput = document.querySelector(`input[type=file].${className}`)
      fileInput.click()
    },

    updateSubmit() {
      let _form = Object.assign({ id: this.tableData.row.id }, this.form)
      _form = clearEmptyItem(_form)
      updateUser(_form, this.mode).then(res => {
        debugger
        this.$message.success(res.message)
        this.dialogVisible.user = false
        this.fetchData()
      })
    },
    async uploadPhotos() {
      const files = this.$refs['uploadPhotos'].uploadFiles.map(item => item.raw)
      const photos = []
      for (let i = 0; i < files.length; i++) {
        const formData = new FormData()
        formData.append('multipartFile', files[i])
        const res = await uploadQNImg(formData)
        photos.push(res.data)
      }

      return photos
    },
    async updateUserPhotos() {
      const photos = await this.uploadPhotos()
      debugger
      const _form = {
        id: this.tableData.row.id,
        photos: photos.join(',')
      }
      updateUser(_form, 'edit').then(res => {
        this.$message.success(res.message)
      })
    },
    handlePictureCardPreview(file) {
      this.dialogImageUrl = file.url
      this.ImageUrlVisible = true
    },

    uploadFile(e, target) {
      const files = e.target.files
      if (files.length) {
        const formData = new FormData()
        formData.append('multipartFile', files[0])
        uploadQNImg(formData).then((res) => {
          this[target[0]][target[1]] = res.data
        })
      }
    },

    uploadFiles(e) {
      const files = e.target.files
      if (files.length) {
        const formData = new FormData()
        formData.append('multipartFile', files[0])
        uploadQNImg(formData).then((res) => {
          this.dirRow.icon = res.data
        })
      }
    },

    fetchData() {
      this.tableData.loading = true
      const _form = Object.assign({
        pageNo: this.pager.pageNo, // 页数
        pageSize: this.pager.pageSize // 条数
      }, this.filter)
      query(_form)
        .then((res) => {
          const { result = {}} = res
          this.tableData.array = result.records
          this.pager.total = result.total // 总数
        }).finally(_ => {
          this.tableData.loading = false
        })
    },

    // 头像
    changeImg(row) {
      this.bigVisible = true
      this.editImg = row
    },

    // 查看
    handleClick(row) {
      this.handVisible = true
      this.handleRow = row
    },
    // 复选框的操作
    selsChange(sels) {
      this.sels = sels
    },
    // 批量删除
    deleteFileOrDirectory() {
      const ids = this.sels.map((rowd) => rowd.id).join(',')
      console.log(ids)
      this.$confirm('确定要删除选中的用户吗?', '提示')
        .then(() => {
          userDelete({
            ids: ids
          }).then((data) => {
            this.$message.success(data.message)
            this.fetchData()
          })
        })
        .catch((error) => {
          console.log(error)
        })
    },
    addIphone(row) {
      this.photosVisible = true
      this.tableData.row = row
    }

  }
}
</script>
